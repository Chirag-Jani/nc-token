# Network
# ANCHOR_PROVIDER_URL=https://api.mainnet-beta.solana.com  # or devnet
ANCHOR_PROVIDER_URL=https://api.devnet.solana.com

# Wallet
ANCHOR_WALLET=~/.config/solana/id.json

# Token Configuration
TOKEN_NAME="NC Token"
TOKEN_SYMBOL="NC"
TOKEN_DECIMALS=8
TOTAL_SUPPLY=30000000000

# Token Metadata (for image/description display in explorers and wallets)
# METADATA_URI: Direct URI to hosted JSON metadata file (recommended)
# The JSON file should contain: { "name": "...", "symbol": "...", "description": "...", "image": "https://..." }
# You can host this on Arweave, IPFS, or any HTTP server
METADATA_URI=
# Alternative: provide image and description separately (stored in deployment-info.json for reference)
TOKEN_IMAGE=
TOKEN_DESCRIPTION=

# Governance Configuration
REQUIRED_APPROVALS=2
COOLDOWN_PERIOD=1800
SIGNERS="1,2,3"
TREASURY_ADDRESS="1"

# Presale Configuration
TOKEN_PRICE_USD_MICRO=1000  # $0.001 per token
MINT_BATCH_SIZE_TOKENS=30000000000